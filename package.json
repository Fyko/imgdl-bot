{
    "name": "imgdl-bot",
    "version": "0.1.0",
    "description": "a Discord bot to recursively download images from a Discord channel",
    "main": "dist/index.js",
    "scripts": {
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --fix --ext .ts",
        "cleardir": "rimraf dist/*",
        "compile": "tsc",
        "build": "pnpm run cleardir && pnpm run compile",
        "start": "pnpm run build && node ."
    },
    "author": "Carter Himmel <me@fyko.net>",
    "license": "Apache 2.0",
    "dependencies": {
        "@spectacles/brokers": "^0.7.2",
        "archiver": "^4.0.1",
        "aws-sdk": "^2.689.0",
        "common-tags": "^1.8.0",
        "discord-akairo": "github:discord-akairo/discord-akairo",
        "discord.js": "github:discordjs/discord.js",
        "mongoose": "^5.9.17",
        "node-fetch": "~2.6.0",
        "tslib": "^1.13.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/archiver": "^3.1.0",
        "@types/common-tags": "^1.8.0",
        "@types/mongoose": "^5.7.21",
        "@types/node": "^13.13.9",
        "@types/node-fetch": "^2.5.7",
        "@types/ws": "^7.2.5",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "eslint": "^6.8.0",
        "eslint-config-marine": "^6.0.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.2",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.3"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.1",
        "erlpack": "github:discordapp/erlpack",
        "utf-8-validate": "^5.0.2",
        "zlib-sync": "^0.1.6"
    },
    "eslintConfig": {
        "extends": "marine/prettier/node",
        "rules": {
            "comma-dangle": [
                "error",
                "always-multiline"
            ]
        }
    }
}
