{
    "name": "bot",
    "version": "0.0.0",
    "description": "the discord bot",
    "main": "dist/index.js",
    "scripts": {
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --fix --ext .ts",
        "cleardir": "rm -rf dist/*",
        "compile": "tsc -b --verbose",
        "build": "pnpm run cleardir && pnpm run compile",
        "prestart": "pnpm run build",
        "start": "pnpm run build && node ."
    },
    "dependencies": {
        "@spectacles/brokers": "^0.7.2",
        "@spectacles/rest": "^0.8.3",
        "@spectacles/types": "^0.2.1",
        "@spectacles/util": "^0.3.2",
        "fs-nextra": "^0.5.1",
        "ioredis": "^4.17.1",
        "tslib": "^2.0.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/ioredis": "^4.16.2",
        "@types/node": "^13.11.1",
        "@typescript-eslint/eslint-plugin": "^2.28.0",
        "@typescript-eslint/parser": "^2.28.0",
        "eslint": "^6.8.0",
        "eslint-config-marine": "^6.0.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.3",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.2",
        "typescript": "^3.8.3"
    },
    "peerDependencies": {
        "@spectacles/util": "^0.3.2",
        "erlpack": "github:discordapp/erlpack"
    },
    "eslintConfig": {
        "extends": "marine/prettier/node",
        "rules": {
            "comma-dangle": [
                "error",
                "always-multiline"
            ]
        }
    }
}
